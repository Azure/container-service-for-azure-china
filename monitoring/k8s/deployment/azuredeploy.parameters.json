{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "value": "<controller-vm-name>"
    },
    "vmSize": {
      "value": "Standard_A1"
    },
    "adminUsername": {
      "value": "<controller-vm-admin-username>"
    },
    "adminPassword": {
      "value": "<controller-vm-admin-password>"
    },
    "masterDNS": {
      "value": "<k8s-master-dns>"
    },
    "masterUserName": {
      "value": "<k8s-master-username>"
    },
    "masterPrivateKey": {
      "value": "<k8s-master-ssh-private-key-base64-encoded>"
    }
  }
}

